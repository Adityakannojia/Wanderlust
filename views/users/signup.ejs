<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on wanderlust</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" class="needs-validation" novalidate>
            <div>
                <label for="username" class="form-label">username</label>
                <input name="username" type="text" class="form-control" required id="username">
                <div class="valid-feedback">Look good</div>
            </div>
            <br>
            <div>
                <label for="email" class="form-label">Email</label>
                <input name="email" type="email" class="form-control" required id="email">
            </div>
            <br>
            <div>
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control" required id="password">
            </div>
            <br>
            <button class="btn btn-danger">Signup</button>
        </form>
    </div>
</div>